{
    "author": "Christoph Guttandin",
    "bugs": {
        "url": "https://github.com/chrisguttandin/mse-tests/issues"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "description": "A collection of MSE tests.",
    "devDependencies": {
        "@babel/core": "^7.24.9",
        "@babel/preset-env": "^7.24.8",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-angular": "^19.3.0",
        "babel-loader": "^9.1.3",
        "commitizen": "^4.3.0",
        "copy-webpack-plugin": "^12.0.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-holy-grail": "^59.0.10",
        "html-minifier": "^4.0.0",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.3",
        "hyperlink": "^5.0.4",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.6",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "homepage": "https://chrisguttandin.github.io/mse-tests",
    "license": "MIT",
    "main": "src/index.html",
    "name": "mse-tests",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/chrisguttandin/mse-tests.git"
    },
    "scripts": {
        "build": "rimraf build/* && html-minifier --config-file config/html-minifier/config.json --file-ext html --input-dir src --output-dir build && npx webpack --config config/webpack/production.js",
        "lint": "npm run lint:config && npm run lint:src",
        "lint:config": "eslint --config config/eslint/config.json --ext .js --report-unused-disable-directives config/",
        "lint:src": "eslint --config config/eslint/src.json --ext .js --report-unused-disable-directives src/ && htmlhint --config config/htmlhint/document.json 'src/**/index.html'",
        "monitor": "npx webpack server --config config/webpack/development.js",
        "prepare": "husky install",
        "test": "npm run lint"
    },
    "version": "1.0.16"
}
